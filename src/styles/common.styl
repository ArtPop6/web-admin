[v-cloak]
  display none

.scrollbar{
  border: none;
  display:block;
  overflow: auto;
  -webkit-overflow-scrolling : touch;  
}
/*凹槽宽度*/
.scrollbar::-webkit-scrollbar{
  width:8px;
  height:8px;
}
/*拖动条*/
.scrollbar::-webkit-scrollbar-thumb{
  background-color:#ccc;
  border-radius:6px;
}
/*背景槽*/
.scrollbar::-webkit-scrollbar-track{
  background-color:#ddd;
  border-radius:6px;
}
