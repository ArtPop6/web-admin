table.simple-list
  width 100%
  th, td
    padding 5px
  thead
    th
      border-bottom 1px solid #ccc
  tbody
    tr
      &:nth-child(2n) td
        background-color #f3f3f3
      &:hover td
        background-color #c0ddfb
  &.twin-row
    tbody
      tr
        td
          background-color #fff
        &:nth-child(4n+3) td,
        &:nth-child(4n+4) td
          background-color #f3f3f3
        &:hover
          td, &:nth-child(2n+1) + tr td
            background-color #c0ddfb
